MDScreen:
    name: "reg"
    MDFloatLayout:
        md_bg_color: rgba(255, 255, 255, 255)

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "start_sec"

        MDLabel:
            text:"S v e i k i !"
            font_size:"23sp"
            pos_hint:{"center_x": .6, "center_y": .85}
            color: rgba(0, 0, 59, 255)

        MDLabel:
            text: "Jei neturite paskyros, susikurkite"
            font_size: "16sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(135, 135, 135, 255)

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": 0.5, "center_y": .63}
            md_bg_color: rgba(255, 255, 255, 255)

            MDTextField:
                id: name
                hint_text: "Įveskite vardą"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                text_color_focus: rgba(135, 135, 135, 255)
                line_color_focus: 0, 0, 1, 1

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": 0.5, "center_y": .53}
            md_bg_color: rgba(255, 255, 255, 255)

            MDTextField:
                id: surname
                hint_text: "Įveskite pavardę"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                text_color_focus: rgba(135, 135, 135, 255)
                line_color_focus: 0, 0, 1, 1

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": 0.5, "center_y": .43}
            md_bg_color: rgba(255, 255, 255, 255)

            MDTextField:
                id: email
                hint_text: "Įveskite el. paštą"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                text_color_focus: rgba(135, 135, 135, 255)
                line_color_focus: 0, 0, 1, 1

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": 0.5, "center_y": .33}
            md_bg_color: rgba(255, 255, 255, 255)

            MDTextField:
                id: password
                hint_text: "Įveskite slaptažodį"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                password: True
                text_color_focus: rgba(135, 135, 135, 255)
                line_color_focus: 0, 0, 1, 1

            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_x": .9, "center_y": .5}
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    password.password = False if password.password is True else True

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": 0.5, "center_y": .20}
            md_bg_color: rgba(255, 255, 255, 255)

            MDFlatButton:
                text:"Užsiregistruoti"
                size_hint: .66, .065
                pos_hint: {"center_x": 0.5, "center_y": .09}
                background_color: 0, 0, 0, 0
                color: rgba(52, 0, 231, 255)
                canvas.before:
                    Color:
                        rgb: rgba(52, 0, 231, 255)
                    Line:
                        width: 1.2
                        rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100
                on_release:
                    app.signup()
